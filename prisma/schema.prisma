// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserTable {
  id                String              @id @default(uuid())
  CPF               String              @unique
  Password          String
  username          String
  email             String
  role              String
  gameGenreRelation gameGenreRelation[]
}

model GameTable {
  id                  String             @id @default(uuid())
  Title               String             @unique
  CoverImageUrl       String
  Description         String
  Year                Int
  ImdbScore           Float
  TrailerYouTubeUrl   String
  GameplayYouTubeUrl  String
  gameGenreRelation   gameGenreRelation? @relation(fields: [gameGenreRelationId], references: [id])
  gameGenreRelationId String?
}

model Profile {
  id       String @id @default(uuid())
  Title    String
  ImageURL String
}

model Genre {
  id                String              @id @default(uuid())
  name              String              @unique
  gameGenreRelation gameGenreRelation[]
}

model gameGenreRelation {
  id String @id @default(uuid())

  userId       UserTable   @relation(fields: [userRelation], references: [id])
  userRelation String
  game         GameTable[]
  genre        Genre[]
}
