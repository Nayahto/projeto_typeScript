// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserTable {
  id       String @id @default(uuid())
  CPF      String @unique
  Password String
  username String
  email    String
  role     String
}

model GameTable {
  id                 String @id @default(uuid())
  Title              String @unique
  CoverImageUrl      String
  Description        String
  Year               Int
  ImdbScore          Float
  TrailerYouTubeUrl  String
  GameplayYouTubeUrl String
}
